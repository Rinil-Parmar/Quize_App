<h1>Login</h1>

<%= form_with(scope: :session, url: login_path) do |form| %>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= link_to 'Sign up', signup_path %>
